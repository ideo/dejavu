{
  "type": "modal",
  "title": {
    "type": "plain_text",
    "text": "Add Key Learning",
    "emoji": true
  },
  "submit": {
    "type": "plain_text",
    "text": "Save",
    "emoji": true
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel",
    "emoji": true
  },
  "blocks": [
    {
      "type": "input",
      "element": {
        "type": "plain_text_input",
        "action_id": "keyLearning",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "What key learnings would you like to share with your fellow IDEO-ers? Short and sweet insights are the best insights!"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Key Learning",
        "emoji": true
      }
    },
    {
      "type": "input",
      "element": {
        "type": "plain_text_input",
        "action_id": "context",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Tell us a story about a research participant or some other way you learned this."
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Guiding Context",
        "emoji": true
      }
    },
    {
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Client"
      },
      "element": {
        "type": "multi_static_select",
        "action_id": "clientTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Choose from a list of existing clients",
          "emoji": true
        },
        "options": []
      }
    },
    {
      "type": "input",
      "optional": true,
      "element": {
        "type": "plain_text_input",
        "action_id": "otherClientTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Add new client name(s) separated by commas."
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Add new client(s). \nIf you did not find your client name above, add it below and it will show up in future searches."
      }
    },
    {
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Industry Tags"
      },
      "element": {
        "type": "multi_static_select",
        "action_id": "industryTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Choose from a list of existing client tags.",
          "emoji": true
        },
        "options": []
      }
    },
    {
      "type": "input",
      "optional": true,
      "element": {
        "type": "plain_text_input",
        "action_id": "otherIndustryTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Add new Industry tag(s) separated by commas."
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Add new Industry Tags. \nIf you didn't find relevant industry tags above, add them here separated by commas. They will show up in future searches."
      }
    },
    {
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Related Themes"
      },
      "element": {
        "type": "multi_static_select",
        "action_id": "relatedThemeTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Choose from a list of existing related themes.",
          "emoji": true
        },
        "options": []
      }
    },
    {
      "type": "input",
      "optional": true,
      "element": {
        "type": "plain_text_input",
        "action_id": "otherRelatedThemeTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Add new Related themes(s) separated by commas."
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Add new Related themes. \nIf you didn't find relevant related themes above, add them here separated by commas. They will show up in future searches."
      }
    }
  ]
}