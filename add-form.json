{
  "type": "modal",
  "title": {
    "type": "plain_text",
    "text": "Add Key Learning",
    "emoji": true
  },
  "submit": {
    "type": "plain_text",
    "text": "Save",
    "emoji": true
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel",
    "emoji": true
  },
  "blocks": [
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "Topic: food"
        }
      ]
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "Write here anything you think it might be important for a future team to understand. Don't worry if you're not certain it'll be critical for them. Just write here anything you found interesting or important. Our search function can sort the wheat from the chaff!"
        }
      ]
    },
    {
      "type": "input",
      "element": {
        "type": "plain_text_input",
        "action_id": "keyLearning",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "What key learnings would you like to share with your fellow IDEO-ers? Short and sweet insights are the best insights!"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Key Learning",
        "emoji": true
      }
    },
    {
      "type": "input",
      "element": {
        "type": "plain_text_input",
        "action_id": "context",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Tell us a story about a research participant or some other way you learned this."
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Guiding Context",
        "emoji": true
      }
    },
    {
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Client (if already exists in this dropdown)"
      },
      "element": {
        "type": "multi_static_select",
        "action_id": "clientTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Select client",
          "emoji": true
        },
        "options": []
      }
    },
    {
      "type": "input",
      "optional": true,
      "element": {
        "type": "plain_text_input",
        "action_id": "otherClientTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Add client name. (if not found in above dropdown menu)"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "If adding multiple, separate them by commas. Clients that you save here will show up in future searches."
      }
    },
    {
      "type": "input",
      "optional": true,
      "label": {
        "type": "plain_text",
        "text": "Industry Tags"
      },
      "element": {
        "type": "multi_static_select",
        "action_id": "industryTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Select tag items",
          "emoji": true
        },
        "options": []
      }
    },
    {
      "type": "input",
      "optional": true,
      "element": {
        "type": "plain_text_input",
        "action_id": "otherIndustryTags",
        "placeholder": {
          "type": "plain_text",
          "text": "Any other industry tags that you'd like to add, separated by commas."
        }
      },
      "label": {
        "type": "plain_text",
        "text": "More Industry Tags"
      }
    },
    {
      "type": "input",
      "optional": true,
      "element": {
        "type": "plain_text_input",
        "action_id": "relatedThemes",
        "placeholder": {
          "type": "plain_text",
          "text": "What are some related themes?"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Related Themes"
      }
    },
    {
      "type": "input",
      "optional": true,
      "element": {
        "type": "plain_text_input",
        "action_id": "client",
        "placeholder": {
          "type": "plain_text",
          "text": "Who is the client on this project?"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "Client"
      }
    }
  ]
}