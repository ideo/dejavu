{
  "insightsCollectionTemplate": {
    "type": "modal",
    "title": {
      "type": "plain_text",
      "text": "Add Key Learning",
      "emoji": true
    },
    "submit": {
      "type": "plain_text",
      "text": "Save",
      "emoji": true
    },
    "close": {
      "type": "plain_text",
      "text": "Cancel",
      "emoji": true
    },
    "blocks": [
      {
        "type": "context",
        "elements": [
          {
            "type": "mrkdwn",
            "text": ""
          }
        ]
      },
      {
        "type": "input",
        "element": {
          "type": "plain_text_input",
          "action_id": "keyLearning",
          "multiline": true,
          "placeholder": {
            "type": "plain_text",
            "text": "What key learnings would you like to share with your fellow IDEO-ers? Short and sweet insights are the best insights!"
          }
        },
        "label": {
          "type": "plain_text",
          "text": "Research Insight",
          "emoji": true
        }
      },
      {
        "type": "input",
        "element": {
          "type": "plain_text_input",
          "action_id": "context",
          "multiline": true,
          "placeholder": {
            "type": "plain_text",
            "text": "Tell us a story about a research participant or some other way you learned this."
          }
        },
        "label": {
          "type": "plain_text",
          "text": "Guiding Context",
          "emoji": true
        }
      },
      {
        "type": "section",
        "text": {
          "type": "mrkdwn",
          "text": "Client Tags"
        },
        "accessory": {
          "type": "multi_static_select",
          "placeholder": {
            "type": "plain_text",
            "text": "Select items",
            "emoji": true
          },
          "options": [
            
          ]
        }
      },
      {
        "type": "input",
        "element": {
          "type": "plain_text_input",
          "action_id": "tags",
          "placeholder": {
            "type": "plain_text",
            "text": "A comma separated list of tags related to this research insight."
          }
        },
        "label": {
          "type": "plain_text",
          "text": "Tags"
        }
      },
      {
        "type": "input",
        "optional": true,
        "element": {
          "type": "plain_text_input",
          "action_id": "client",
          "placeholder": {
            "type": "plain_text",
            "text": "Who is the client on this project?"
          }
        },
        "label": {
          "type": "plain_text",
          "text": "Client"
        }
      }
    ]
  }
}